{{#if hasResults}}

  <ul>
  {{#each results}}
    <li class="search-result">
      <div>{{title}}</div>
      <div>{{year}}</div>
      <div><img src="https://image.tmdb.org/t/p/w185_and_h278_bestv2/{{poster_path}}" alt=""></div>
      <button class="wishlist-button btn" data-id={{id}} data-title={{title}} data-poster={{poster_path}}>Add to Wishlist</button>
      <button class="watchedlist-button btn" data-id="{{id}}" data-title="{{title}}" data-poster="{{poster_path}}">Add to Watchedlist</button>

    </li>
  {{/each}}
  </ul>
{{else}}
  You have no search results
{{/if}}
